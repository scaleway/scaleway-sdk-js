{
  "compilerOptions": {
    "noEmit": true,
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "strict": true,
    "allowUnreachableCode": false,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strictPropertyInitialization": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["dist/**"]
}
