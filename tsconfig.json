{
  "compilerOptions": {
    "noEmit": true,
    "lib": ["es2021"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "strict": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "allowUnreachableCode": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": ["**/examples/**", "**/dist/**"],
}
