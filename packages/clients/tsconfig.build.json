{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": true,
    "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": true
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "resolveFullExtension": ".js"
  },
  "exclude": [
    "dist/*",
    "*.config.ts",
    "*.setup.ts",
    "**/__tests__",
    "**/__mocks__",
    "src/**/*.test.tsx"
  ]
}
