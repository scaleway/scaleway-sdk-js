{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages_generated/*"
  ],
  "engines": {
    "node": ">=20.19.6",
    "pnpm": ">=10.13.1"
  },
  "type": "module",
  "scripts": {
    "generateAlias": "pnpm dlx tsx ./scripts/generateAlias.ts",
    "generatePackages": "pnpm dlx tsx ./scripts/generatePackages.ts",
    "generateGlobalSdkPackage": "pnpm dlx tsx ./scripts/updateGlobalSdkPackage.ts",
    "setupNewProducts": "pnpm dlx tsx ./scripts/setupNewProducts.ts",
    "prebuild": "pnpm run generatePackages && pnpm run generateAlias &&  pnpm format",
    "build:packages": "pnpm turbo run build",
    "fix-import-extensions": "pnpm dlx tsx ./scripts/fix-import-extensions.ts",
    "build": "pnpm run build:packages && pnpm run fix-import-extensions",
    "typecheck": "pnpm turbo typecheck",
    "build:profile": "cross-env PROFILE=true pnpm run build",
    "commit": "npx git-cz -a",
    "doc": "typedoc",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "format:generated": "biome check --write --linter-enabled=false packages_generated",
    "prettier": "prettier --write '**/*.{md,mdx,yml,yaml}'",
    "lint": "biome lint .",
    "check": "biome check .",
    "prepare": "husky",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:junit": "vitest --reporter=junit --outputFile=test-report.junit.xml",
    "test:ui": "vitest --ui"
  },
  "lint-staged": {
    "packages/*/src/**/*.{ts,tsx,js,jsx}": [
      "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
    ],
    "scripts/**/*.ts": [
      "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
    ],
    "*.y?(a)ml": [
      "prettier --write"
    ],
    "*.md?(x)": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@manypkg/cli": "0.25.1",
    "@vitest/coverage-istanbul": "3.1.2",
    "@vitest/coverage-v8": "3.1.2",
    "@vitest/ui": "3.1.2",
    "babel-plugin-annotate-pure-calls": "0.5.0",
    "browserslist": "4.28.0",
    "cross-env": "10.1.0",
    "cross-fetch": "4.1.0",
    "cz-conventional-changelog": "3.3.0",
    "esbuild-plugin-browserslist": "1.0.2",
    "husky": "9.1.7",
    "jsdom": "26.1.0",
    "lerna": "8.2.4",
    "lint-staged": "15.5.2",
    "prettier": "3.6.2",
    "react": "^19.2.0",
    "read-pkg": "9.0.1",
    "tsc-alias": "^1.8.16",
    "turbo": "^2.5.6",
    "typedoc": "0.27.6",
    "typescript": "5.8.3",
    "vite": "6.4.1",
    "vitest": "3.1.2"
  },
  "packageManager": "pnpm@10.13.1"
}
