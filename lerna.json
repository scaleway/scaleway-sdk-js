{
  "packages": ["packages/*", "packages_generated/*"],
  "npmClient": "pnpm",
  "version": "independent",
  "command": {
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "createRelease": "github",
      "loglevel": "verbose",
      "signGitCommit": true,
      "signGitTag": true
    }
  },
  "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}
